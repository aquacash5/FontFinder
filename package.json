{
  "name": "dev.kylebloom.fontfinder",
  "private": true,
  "productName": "Font Finder",
  "version": "1.4.1",
  "description": "An application for viewing and searching the system fonts.",
  "main": "build/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development run-p -r build:renderer:dev build:main:run",
    "start:electron": "electron .",
    "build": "run-s reset:build build:installer build:renderer build:main",
    "build:installer": "webpack --config webpack.installer.config.js",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "build:renderer:dev": "webpack-dev-server --content-base ./build --config webpack.renderer.config.js",
    "build:main": "webpack --config webpack.main.config.js",
    "build:main:run": "run-s build:main start:electron",
    "reset": "run-s reset:build reset:dist reset:installer",
    "reset:build": "shx rm -rf ./build",
    "reset:dist": "shx rm -rf ./dist",
    "reset:installer": "shx rm -rf ./installers",
    "package": "cross-env NODE_ENV=production run-s reset build package:win",
    "package:win": "electron-packager . fontfinder --overwrite --asar --ignore=\"(dist|node_modules|elm|src|installers|\\.vscode|\\.git|webpack|lock)\" --platform=win32 --arch=x64 --out dist/win --icon=assets/icons/windows/icon.ico",
    "installer": "run-s package installer:win",
    "installer:win": "node ./win-installer.js",
    "upgrade": "run-s upgrade:elm upgrade:npm",
    "upgrade:elm": "npx elm-json upgrade",
    "upgrade:npm": "npm update"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aquacash5/FontFinder.git"
  },
  "keywords": [
    "Electron",
    "font",
    "search",
    "viewer"
  ],
  "author": "Kyle Bloom (kylejbloom@gmail.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aquacash5/FontFinder/issues"
  },
  "homepage": "https://github.com/aquacash5/FontFinder#readme",
  "devDependencies": {
    "@webpack-cli/init": "^1.0.2",
    "autoprefixer": "^9.7.6",
    "css-loader": "^3.5.3",
    "dotenv": "^8.2.0",
    "electron": "^10.1.5",
    "electron-packager": "^15.1.0",
    "electron-winstaller": "^4.0.0",
    "electron-wix-msi": "^2.2.0",
    "elm": "^0.19.1-3",
    "elm-hot-webpack-loader": "^1.1.6",
    "elm-webpack-loader": "^7.0.1",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.14.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.2",
    "shx": "^0.3.2",
    "style-loader": "^1.2.1",
    "url-loader": "^4.1.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.2"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "cross-env": "^7.0.2",
    "electron-window-state": "^5.0.3",
    "node-fetch": "^2.6.1",
    "ramda": "^0.27.0",
    "system-font-families": "^0.4.1",
    "ttfinfo": "git+https://github.com/aquacash5/ttfinfo.git"
  }
}
