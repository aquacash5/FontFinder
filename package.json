{
  "name": "fontfinder",
  "version": "1.0.0",
  "description": "An application for viewing and searching the system fonts.",
  "main": "build/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=dev run-p -r build:renderer:dev build:main:run",
    "start:electron": "electron .",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "build:renderer:dev": "webpack-dev-server --config webpack.renderer.config.js",
    "build:main": "webpack --config webpack.main.config.js",
    "build:main:run": "run-s build:main start:electron",
    "package": "run-s build:renderer build:main package:win64",
    "package:win64": "electron-packager . --asar --overwrite --ignore=/node_modules --ignore=/src --platform=win32 --arch=x64 --out dist/win --icon=assets/icons/windows/icon.ico"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aquacash5/FontFinder.git"
  },
  "keywords": [
    "Electron",
    "font",
    "search",
    "viewer"
  ],
  "author": "Kyle Bloom (kylejbloom@gmail.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aquacash5/FontFinder/issues"
  },
  "homepage": "https://github.com/aquacash5/FontFinder#readme",
  "devDependencies": {
    "@webpack-cli/init": "^0.3.0",
    "autoprefixer": "^9.7.4",
    "cross-env": "^7.0.0",
    "css-loader": "^3.4.2",
    "electron": "^8.0.0",
    "electron-packager": "^14.2.1",
    "elm": "^0.19.1-3",
    "elm-hot-webpack-loader": "^1.1.6",
    "elm-webpack-loader": "^6.0.1",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.2"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "system-font-families": "^0.4.1"
  }
}
